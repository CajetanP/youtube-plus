<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="primaryTextColour">@android:color/black</item>
        <item name="backgroundColour">@android:color/white</item>
        <item name="listItemBackground">@drawable/selector_video_list</item>
        <item name="videoThumbnailPlaceholder">@color/darkerLightGrey</item>
        <item name="bottomBarColours">@drawable/bottom_bar_colour_state</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="primaryTextColour">@android:color/white</item>
        <item name="actionBarTheme">@color/backgroundDark</item>
        <item name="android:background">@color/backgroundDark</item>
        <item name="backgroundColour">@color/backgroundDark</item>
        <item name="listItemBackground">@drawable/selector_video_list_dark</item>
        <item name="videoThumbnailPlaceholder">@color/backgroundDarkerDark</item>
        <item name="bottomBarColours">@drawable/bottom_bar_colour_state_dark</item>
        <item name="android:preferenceStyle">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="PlayerActivityThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="primaryTextColour">@android:color/black</item>
        <item name="backgroundColour">@android:color/white</item>
        <item name="listItemBackground">@drawable/selector_video_list_dark</item>
        <item name="videoThumbnailPlaceholder">@color/backgroundDarkerDark</item>
    </style>

    <style name="PlayerActivityThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="primaryTextColour">@android:color/white</item>
        <item name="backgroundColour">@color/backgroundDark</item>
        <item name="listItemBackground">@drawable/selector_video_list_dark</item>
        <item name="videoThumbnailPlaceholder">@color/backgroundDarkerDark</item>
     </style>

</resources>
